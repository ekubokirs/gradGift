<div class = "gw_newForm">
	<%= form_for @sassy, url:{action: "create"} do |wish| %>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :nickname, "Nickname:" %>
			</span>
			<span class="large-9 columns right">
				<%= wish.text_field :nickname %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :time, "Length of Time:" %>
			</span>
			<span class="large-9 columns right">
				<%= wish.text_field :time %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :relationship, "Relationship:" %>
			</span>
			<span class="large-9 columns right">
				<%= wish.text_field :relationship %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :embarrassing, "Embarrassing Story:" %>
			</span>
			<span class="large-9 columns right">
				<%= wish.text_field :embarrassing %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :good_advice, "Good Advice:" %>
			</span>
			<span class="large-9 columns right">
				<%= wish.text_field :good_advice %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :bad_things, "Something Bad:" %>
			</span>
			<span class="large-9 columns right">
				<%= wish.text_field :bad_things %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :luck, "Well Wish:" %>
			</span>
			<span class="large-9 columns">
				<%= wish.text_field :luck %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :closing, "Salutation:" %>
			</span>
			<span class="large-9 columns">
				<%= wish.text_field :closing %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :friend, "Your Name:" %>
			</span>
			<span class="large-9 columns">
				<%= wish.text_field :friend %>
			</span>
		</div>
		<div class="row">
			<span class="large-3 columns gw_label">
				<%= wish.label :ps, "Final Thoughts:" %>
			</span>
			<span class="large-9 columns">
				<%= wish.text_field :ps %>
			</span>
		</div>
		<%= wish.submit "Submit Sassy Wish", :class => "button small gw_formButton" %>
	<% end %>
</div>